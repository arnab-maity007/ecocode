# Database Configuration (NeonDB - serverless PostgreSQL)
# Get your connection string from: https://console.neon.tech
# Format: postgresql://user:password@ep-xxx.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://your_user:your_password@ep-xxx.neon.tech/your_dbname?sslmode=require

# API Keys
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here
GOOGLE_ELEVATION_API_KEY=your_google_elevation_api_key_here

# JWT Secret Key (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
APP_NAME=Hyperlocal Urban Flood Forecaster
DEBUG=True
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: Notification Services
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# TWILIO_PHONE_NUMBER=your_twilio_number
